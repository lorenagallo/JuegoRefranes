    cout << "(2) Mostrar resultados anteriores." << endl;
    cout << "(3) Salir" << endl;

    cout << "Ingrese el número: " << endl;
}

int main() {

    bool repeat = true;
    while (repeat = true){

        int opc;

        menuPrograma();

