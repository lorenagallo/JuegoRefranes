string r5;
string respusu;
string resp;
string releg;

void mostrarRefranIncompleto(){
    
    int x = 0;
    x = rand()%5 + 1;
    
    if (x == 1) {
        releg = ri1;
    cout << releg << endl;
    }
    else if (x == 2) {
        releg = ri2;
    cout << releg << endl;
    }
    else if (x == 3) {
        releg = ri3;
    cout << releg << endl;
    }
    else if (x == 4) {
        releg = ri4;
    cout << releg << endl;
    }
    else if (x == 5) {
        releg = ri5;
    cout << releg << endl;
    } 
}

void mostrarRefranCompleto(int n){

    r1 = ri1 + re1;
    r2 = ri2 + re2;
    r3 = ri3 + re3;
    r4 = ri4 + re4;
    r5 = ri5 + re5;

}

void obtenerRespuesta(string refran){
    
    if (releg == ri1){
    resp = re1;
    }
    else if (releg == ri2){
    resp = re2;
    }
    else if (releg == ri3){
    resp = re3;
    }
    else if (releg == ri4){
    resp = re4;
    }
    else if (releg == ri5){
    resp = r5;
    }
}

void compararRespuesta(string respuesta){
  
    if (resp == respusu){
        cout << "Excelente, usted ha ganado 1 punto." << endl;
        cpuntos = cpuntos + 1;
    }
    else{
        cout << "Respuesta incorrecta" << endl;
    }

}

void mostrarSignificado(){

    string s1 = "Cuando tienes hambre de verdad o una necesidad, no te pones selectivo con la comida o los gustos.";
