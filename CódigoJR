    string s5 = "Quien despierta temprano será ayudado por Dios.";

}

void menuPrograma(){

    cout << "******************************************" << endl;
    cout << "*                                        *" << endl;
    cout << "*    Bienvenidos al juego de refranes:   *" << endl;
    cout << "*                                        *" << endl;
    cout << "******************************************" << endl;
    cout << "Ingrese el número de la opción que desea utilizar:" << endl;

    cout << "(1) Jugar a completar refranes." << endl; 
    cout << "(2) Mostrar resultados anteriores." << endl;
    cout << "(3) Salir" << endl;
  
    cout << "Ingrese el número: " << endl;
}

int main() {

    bool repeat = true;
    while (repeat = true){
        
        int opc;
        
        menuPrograma();

        cin >> opc;

        //MENU
        switch (opc) {
            case 1:
                
                bool repeat1 = true;
                while (repeat1 = true){
                
                    mostrarRefranIncompleto();
                    cout << "Ingrese 1 si desea jugar 2 si desea omitir el refrán y ver otro: " << endl;
                    cin >> jugo;

                    //MENU JUGO
                    switch (jugo) {
                        case 1:

                            cout << "Ingrese su respuesta: " << endl;

                            cin >> respusu;
                            compararRespuesta(respusu);
                            break;

                        case '2':
                            repeat1 = false;
                    }                        
                }
            case 2:
                 cout << cpuntos <<endl;
                 break;

            case 3: 
                 repeat = false;

     
        }
        
    }
    return 0;
}
