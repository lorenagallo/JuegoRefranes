    }
}

void compararRespuesta(string RESPU, string respuesta){

    if (RESPU == respuesta){
        cout << "Excelente, usted ha ganado 1 punto." << endl;
        cpuntos = cpuntos + 1;
    }
    else if(RESPU != respuesta){
        cout << "Respuesta incorrecta" << endl;

        cout << "La respuesta correcta será: " << endl;
        mostrarRefranCompleto(x);
    }

}

