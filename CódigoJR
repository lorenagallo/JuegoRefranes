void menuPrograma(){

    cout << "******************************************" << endl;
    cout << "*                                        *" << endl;
    cout << "*    Bienvenidos al juego de refranes:   *" << endl;
    cout << "*                                        *" << endl;
    cout << "******************************************" << endl;
    cout << "Ingrese el número de la opción que desea utilizar:" << endl;

    cout << "(1) Jugar a completar refranes." << endl; 
    cout << "(2) Mostrar resultados anteriores. << endl;
    cout << "(3) Salir" << endl;
  
    cout << "Ingrese el número: << endl;
}

int main() {

    bool Quit = false;
    char opc = 'z';

    menuPrograma();
    cin >> opc;
    
    switch (opc) {
            case '1':
                cout << "REFRAN INCOMPLETO FUNCION";

            case '2':
                 //RESULTADOS
                 break;

            case '5': //user wants to quit
                 Quit = true;  //execution continues after the switch
                  //or do this to end program
                 return 0;
                 break;

            default:
                  std::cout << "Bad Input, Try again " << std::endl;
                  break;
     }  
    return 0;
}
